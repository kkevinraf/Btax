<!DOCTYPE html>
<html>
<head>
	<title>B'tax</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="">
	<link rel="stylesheet" type="text/css" href="{{ asset('user_assets/css/styles-ind.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('user_assets/css/login.css') }}">
	<style type="text/css">
		#error_messsage
		{
			color: red;
			text-align: center;
		}
	</style>
</head>
<body>
	<!-----------------------------Header------------------------------------>
	<header class="topbar-c">
		<div class="nav-c">
			<!-----------------------------Header Left------------------------------------>
			<div class="nav-c-left">
				<div class="logo-place">
					<a href="{{ path('book_homepage') }}"><img src="{{ asset('user_assets/img/logo-f.png') }}" class="logo-place-img"></a>
				</div>
			</div>
			<!-----------------------------End Header Left------------------------------------>


			<!-----------------------------Header Right------------------------------------>
			<div class="nav-c-right">
				<div class="nav-c-right-space">
					<ul>
						<li><a href="{{ path('fos_user_security_login') }}"><button class="stl-btn-log">Connexion</button></a></li>
						<li><a href="{{ path('fos_user_registration_register') }}"><button class="stl-btn-log">Inscription</button></a></li>
					</ul>
				</div>
			</div>
			<!-----------------------------End Header Right------------------------------------>

		</div>
	</header>
	<!-----------------------------End Header------------------------------------>
	<div class="banniere"></div>
	<!-----------------------------Body 1------------------------------------>

	<div class="body1">
		<div class="b-body">
			
			<div class="form-login">
				<form action="{{ path('fos_user_security_check') }}" method="post">
    			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    			{% if error is defined and error != '' %} 
    			<div class="form-login-body">
					<div class="group-input-login">
						<span class="login-label" id="error_messsage">{{ error }}</span><br>
					</div>
				</div>
				{% endif %}
				{% for message in app.session.flashbag.get('error') %} 
    			<div class="form-login-body">
					<div class="group-input-login">
						<span class="login-label" id="error_messsage">{{ message }}</span><br>
					</div>
				</div>
				{% endfor %}
				<div class="form-login-body">
					<div class="group-input-login">
						<span class="login-label">Adresse e-mail </span><br>
						<input class="login-input" type="email" id="username" name="_username" value="{{ last_username }}" required="required">
					</div>
				</div>
				<div class="form-login-body">
					<div class="group-input-login">
						<span class="login-label">Mot de passe </span><br>
						<input class="login-input" type="password" id="password" name="_password" required="required">
					</div>
				</div>
				<div class="password-body">
					<div class="left-logincontent"></div>
					<div class="right-logincontent"><a href="#">Mot de passe oublie ?</a></div>
				</div>
				

				<div class="form-login-body">
					<div class="group-input-login">
						<input type="submit" value="Se connecter" class="login-button">
					</div>
				</div>
				</form>
				<div class="form-login-footer">
					Pas encore membre ? <a href="{{ path('fos_user_registration_register') }}">Inscrivez-vous</a>
				</div>
				
			</div>
			
		</div>
	</div>
	<script type="text/javascript" src="{{ asset('user_assets/js/jquery-3.4.1.min.js') }}"></script>
	<script type="text/javascript" src="{{ asset('user_assets/js/script.js') }}"></script>
</html>