<!DOCTYPE html>
<html>
<head>
	<title>B'tax</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="">
	<link rel="stylesheet" type="text/css" href="{{ asset('user_assets/css/styles.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('user_assets/css/confirmation-paiement.css') }}">
</head>
<body>
	<!-----------------------------Header------------------------------------>
	<header class="topbar-c">
		<div class="nav-c">


			<!-----------------------------Header Left------------------------------------>
			<div class="nav-c-left">
				<div class="logo-place">
					<img src="{{ asset('user_assets/img/logo-f.png') }}" class="logo-place-img">
				</div>
			</div>
			<!-----------------------------End Header Left------------------------------------>


			

		</div>
	</header>
	<!-----------------------------End Header------------------------------------>

	<div>
		<div class="banniere"></div>
		<div class="content-b">
			{% set m = 0 %}
			{% if montant is defined %}
				{% set m = montant %}
			{% endif %}
			<div class="confirmation-paiement">
				<div class="confirmation-paiement-header">
					<div class="success-img"></div>
					<div class="confirmation-paiement-header-description">
						{% if transaction is defined and transaction|length >= 1 %}
							{% set m = m*transaction|length %}
						<div class="confirmation-paiement-header-description-title">
							Paiement effectue avec succes
						</div>
						<div class="confirmation-paiement-header-description-transaction">
							Numero de transaction :<br>
							{% if transaction|length == 1 %}
								{% for t in transaction %}
			                       	{{ t }}<br>
			                    {% endfor %}
							{% else %}
								{% for t in transaction %}
			                       	- {{ t }}<br>
			                    {% endfor %}
							{% endif %}
						{% else %}
							Oups !!! Une erreur est survenue :(
						{% endif %}
						</div>
					</div>
				</div>
				<div class="confirmation-paiement-center">
					<div class="confirmation-paiement-center-l"></div>
					<div class="confirmation-paiement-center-c"></div>
					<div class="confirmation-paiement-center-r"></div>
				</div>
				<div class="confirmation-paiement-bottom">
					<div class="confirmation-paiement-bottom-description">
						Montant regle : {{ m }} Ar<br>
					</div>
					<div class="confirmation-paiement-bottom-btn">
						<a href="{{ path('search_log_out') }}"><button class="back-to-site-paiement">Revenir sur le site</button></a>
					</div>
				</div>
			</div>

		


		</div>
	</div>

	<script type="text/javascript" src="{{ asset('user_assets/js/jquery-3.4.1.min.js') }}"></script>
</html>