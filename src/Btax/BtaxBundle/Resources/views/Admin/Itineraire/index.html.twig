{% extends '::layout_admin_btax.html.twig' %}

{% block stylesheets -%}

<link rel="stylesheet" href="{{ asset('admin_assets/css/jquery.dataTables.min.css') }}">

{% endblock %}

{% block body -%}


<!-- Data Table area Start-->
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="basic-tb-hd">
                            <h2>Liste itineraire</h2>
                            
                        </div>
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Depart</th>
                                        <th>Destination</th>
                                        <th>Type</th>
                                        <th>Prix</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for Itineraire in Itineraires %}
                                    <tr>
                                        <td>{{ Itineraire.depart }}</td>
                                        <td>{{ Itineraire.destination }}</td>
                                        <td>

                                        {% for ItineraireCoop in ItineraireCoops %}
                                            {% if Itineraire.id == ItineraireCoop.itineraire.id %}
                                                {{ ItineraireCoop.place }}<br/>
                                            {% endif %}
                                        {% endfor %}

                                        </td>
                                         <td>
                                            {% for ItineraireCoop in ItineraireCoops %}
                                            {% if Itineraire.id == ItineraireCoop.itineraire.id %}
                                                {{ ItineraireCoop.prix }} Ar <br/>
                                            {% endif %}
                                        {% endfor %}
                                        </td>
                                        <td>
                                            <a href="#"><i class="notika-icon notika-edit"></i></a>&nbsp;&nbsp;
                                            <a href="#"><i class="notika-icon notika-close"></i></a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Data Table area End-->

    {% endblock %}
