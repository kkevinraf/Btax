{% extends '::layout_admin_btax.html.twig' %}

{% block stylesheets %}
<style type="text/css">
    .logo-icone
    {
        width: 30px;
        height: 30px;
        border-radius: 100%;
    }
</style>
{% endblock %}

{% block body -%}




<div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="data-table-list">
                <div class="basic-tb-hd">
                    <h2>Listes localisations</h2>
                </div>
                <div class="table-responsive">
                    <table id="data-table-basic" class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Localisation</th>      
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                            <tr>
                                <td>
                                    {% if entity.photo == '' %}
                                        {% set url = 'admin_assets/img/default_localisation.jpg' %}
                                    {% else %}
                                        {% set url = 'uploads/localisation/'~entity.photo %}
                                    {% endif %}
                                    <img src="{{ asset(url) }}" class="logo-icone" alt="" />
                                </td>
                                <td>{{ entity.localisation }}</td>
                                <td>
                                    <a href="#"><i class="notika-icon notika-edit"></i></a>&nbsp;&nbsp;
                                    &nbsp;&nbsp;
                                    <a href="#"><i class="notika-icon notika-close"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                         </tbody>
                    </table>
                </div>
            </div>   
        </div>
    </div>



    {% endblock %}
