{% extends '::layout_admin_cooperative.html.twig' %}

{% block body -%}


<div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="basic-tb-hd">
                            <h6>Recherche par {{ choice }} : {{ user }}</h6>
                            
                        </div>
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adresse e-mail</th>
                                        <th>Nom & Prenom</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set i = 0 %}
                                    {% for u in utilisateurs %}
                                    <tr>
                                        <td>{{ u.id }}</td>
                                        <td>{{ u.email }}</td>
                                        <td>{{ u.username }}</td>
                                        <td>Actif</td>
                                        <td>
                                            <a href="{{ path('membre_show_cooperative', { 'id': u.id }) }}"><i class="notika-icon notika-more-button"></i></a>
                                        </td>
                                    </tr>
                                    {% set i = i+1 %}
                                    {% endfor %} 
                                    {% if i == 0 %}
                                        <td colspan="5"><center>Aucun resultat</center></td>
                                    {% endif %}                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Data Table area End-->

    {% endblock %}
