{% extends '::layout_admin_cooperative.html.twig' %}

    
{% block body -%}
<form action="{{ path('trajet_create') }}" method="POST">
    <div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-example-wrap mg-t-30">
                <div class="cmp-tb-hd cmp-int-hd">
                     <h2>Nouveau trajet</h2>
                </div>
                
               
                <div class="form-example-int form-horizental">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                <label class="hrzn-fm">Itineraire :</label>
                            </div>
                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                <div class="chosen-select-act fm-cmp-mg">
                                    <select name="itineraire" class="chosen" data-placeholder="Choose a Country...">
                                        {% for Itineraire in Itineraires %}

                                            {% for ItineraireCoop in ItineraireCoops %}

                                            {% if Itineraire.id == ItineraireCoop.itineraire.id %}
                                                <option value="{{ ItineraireCoop.id }}">{{ Itineraire.depart }} - {{ Itineraire.destination }} - {{ ItineraireCoop.place }}</option>
                                                
                                            {% endif %}
                                            

                                            {% endfor %}
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-example-int form-horizental">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                <label class="hrzn-fm">Date :</label>
                            </div>
                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                <input type="date" class="form-control" name="date">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-example-int form-horizental">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                <label class="hrzn-fm">Heure :</label>
                            </div>
                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                <input type="time" class="form-control" name="heure">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-example-int form-horizental">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                <label class="hrzn-fm">Voiture :</label>
                            </div>
                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                <div class="chosen-select-act fm-cmp-mg">
                                    <select name="voiture" class="chosen" data-placeholder="Choose a Country...">
                                    {% for voiture in Voitures %}
                                            <option value="{{ voiture.id }}">{{ voiture.immatriculation }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-example-int mg-t-15">
                    <div class="row">
                        <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                        </div>
                        <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                            <button class="btn btn-success notika-btn-success waves-effect">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</form>
{% endblock %}

