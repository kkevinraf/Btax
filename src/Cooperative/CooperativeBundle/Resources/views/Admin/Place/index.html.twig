{% extends '::layout_admin_cooperative.html.twig' %}

{% block body -%}


<div class="container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="data-table-list">
                <div class="basic-tb-hd">
                    <h2>Listes places</h2>
                </div>
                <div class="table-responsive">
                    <table id="data-table-basic" class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Place</th>
                                <th>Couleur</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if entities|length == 0%}
                                <td colspan="4"><center>Aucun resultat</center></td>
                            {%  else %}
                            {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('place_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.typePlace }}</td>
                                <td>{{ entity.couleur }}</td>
                                <td>
                                    <a href="{{ path('place_edit', { 'id': entity.id }) }}"><i class="notika-icon notika-edit"></i></a>&nbsp;&nbsp;
                                    <a href="{{ path('place_show', { 'id': entity.id }) }}"><i class="notika-icon notika-more-button"></i></a>&nbsp;&nbsp;
                                    <a href="#"><i class="notika-icon notika-close"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                            {% endif %}
                         </tbody>
                    </table>
                </div>
            </div>   
        </div>
    </div>
    {% endblock %}
