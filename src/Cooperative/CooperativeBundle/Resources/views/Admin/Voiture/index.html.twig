{% extends '::layout_admin_cooperative.html.twig' %}

{% block body -%}

 <!-- Start Email Statistic area-->
    <div class="notika-email-post-area">
        <div class="container">
            <div class="row">                
                <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
                    <div class="contact-inner">
                        <div class="contact-hd widget-ctn-hd">
                            <h6>Listes des voitures</h6>
                            <hr>
                        </div>
                        <div class="contact-dt">
                            <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Immatriculation</th>
                                        <th> Nom proprietaire </th>
                                        <th> NIF </th>
                                        <th> Nombre de place </th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for entity in entities %}
                                    <tr>
                                            <td>{{ entity.immatriculation }}</td>
                                            <td>{{ entity.nomProprietaire }}</td>
                                            <td>{{ entity.nIF }}</td>
                                            <td>{{ entity.nbrPlace }}</td>
                                            <td>
                                                <a href="{{ path('voiture_show', { 'id': entity.id }) }}"><i class="notika-icon notika-more-button"></i></a>&nbsp;&nbsp;
                                                <a href="{{ path('voiture_edit', { 'id': entity.id }) }}"><i class="notika-icon notika-edit"></i></a>&nbsp;&nbsp;
                                                <a href="#"><i class="notika-icon notika-close"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Email Statistic area-->

    {% endblock %}
