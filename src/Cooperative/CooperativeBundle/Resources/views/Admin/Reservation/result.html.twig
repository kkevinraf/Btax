{% extends '::layout_admin_cooperative.html.twig' %}

{% block body -%}

<!-- Start Email Statistic area-->
    <div class="notika-email-post-area">
        <div class="container">
            <div class="row">                
                <div class="col-lg-12 col-md-6 col-sm-6 col-xs-12">
                    <div class="contact-inner">
                        <div class="contact-hd widget-ctn-hd">
                            <h6>Resultat de la recherche</h6>
                            <hr>
                        </div>
                        <div class="contact-dt">
                            <div class="table-responsive">
                            {% if data is defined and data|length != 0 %}
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Nom & Prenom </th>
                                        <th>Itineraire</th>
                                        <th>Type</th>
                                        <th>Transaction</th>
                                        <th>Prix</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for d in data %}
                                    <tr>
                                        <td>{{ d.dateheure|date }}</td>
                                        <td>{{ d.nom }}</td>
                                        <td>{{ d.trajet.itinerairecoop.itineraire.depart }} - {{ d.trajet.itinerairecoop.itineraire.destination }}</td>
                                        <td>{{ d.trajet.itinerairecoop.place }}</td>
                                        <td>{{ d.transaction }}</td>
                                        <td>{{ d.montant }}</td>
                                        <td>{% if d.statut == 1 %}Validate{% else %}Annule{% endif %}</td>
                                        <td><i class="notika-icon notika-sent"></i></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            {% else %}
                            <center>Aucun resultat</center>
                            {% endif %}
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Email Statistic area-->

{% endblock %}